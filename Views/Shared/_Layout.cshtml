@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Airhub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Flights.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AddNewElementForm.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Error.css" asp-append-version="true" />
</head>
<body>
    <header>

        <nav class="navbar navbar-expand-sm navbar-dark bg-primary mb-3">
            <div class="container">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/flights">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Destinations</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">About</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Management</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/planeManagement">Planes</a>
                                    <a class="dropdown-item" href="/airportManagement">Airports</a>
                                    <a class="dropdown-item" href="/flightManagement">Flights</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">My Account</a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/passenger">Forthcoming Flights</a>
                                <a class="dropdown-item" href="/passenger/myflightshistory">Flights History</a>
                                <a class="dropdown-item" asp-controller="Users" asp-action="Index">Personal Data</a>
                            </div>
                        </li>
                        }
                    </ul>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                            </li>
                        }
                    </ul>
                    <div class="nav-item my-auto float-right navbar-brand" id="logo-div">
                        <a href="">
                            <img src="lib/img/plane-logo.png" alt="plane-logo" />
                        </a>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </div>

        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary text-white text-center text-lg-start">
        <div class="text-center p-3">
            <div class="container">
                &copy; 2021 - Airhub - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
