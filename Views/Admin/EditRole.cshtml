@model Airhub.ViewModels.EditRoleViewModel

@{
    
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
        </div>
    </div>

    <h3>Users in role</h3>
    <ul class="list-group">
        @if (Model.Users.Any())
        {
            foreach (var user in Model.Users)
            {
                <li class="list-group-item">@user</li>
            }
        }
        else
        {
            <li class="list-group-item">There is no roles created.</li>
        }
    </ul>

    <div class="form-group row">
        <div class="col-sm-10 mt-4">
            <a asp-controller="Admin" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-primary">
                Add or remove users from this role
            </a>
        </div>
    </div>

</form>
