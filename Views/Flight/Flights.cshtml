
<form asp-action="FindFlightsByDepartureCity" method="post" class="flightSearchingForm">
    <label>Departure city</label>
    <input class="input-label" type="text" name="departureCity"/>
    <input type="submit" value="Search"/>
</form>

<form asp-action="FindFlightsByArrivalCity" method="post" class="flightSearchingForm">
    <label>Arrival city</label>
    <input class="input-label" type="text" name="arrivalCity"/>
    <input type="submit" value="Search" />
</form>

<form asp-action="FindFlightsByDepartureDate" method="post" class="flightSearchingForm">
    <label>Departure Date</label>
    <input class="input-label" type="date" name="departureDate" />
    <input type="submit" value="Search" />
</form>

<table class="table">
    <tr>
        <td>Id</td>
        <td>Departure City</td>
        <td>Arrival City</td>
        <td>Departure Date</td>
        <td>Arrival Date</td>
        <td>Max Seats</td>
        <td>Occupied Seats</td>
    </tr>

    @foreach (var flight in Model)
    {
        <tr>
            <td>@flight.Id</td>
            <td>@flight.DepartureCity.Name</td>
            <td>@flight.ArrivalCity.Name</td>
            <td>@flight.DepartureDate</td>
            <td>@flight.ArrivalDate</td>
            <td>@flight.MaxSeats</td>
            <td>@flight.OccupiedSeats</td>
        </tr>
    }
</table>